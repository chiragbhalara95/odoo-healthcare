<odoo>
    <!-- Appointment Tree View -->
    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">healthcare.appointment.tree</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments" default_order="appointment_date desc">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/>
                <field name="start_time" widget="timepicker" options="{'ampm': true, 'step': 5}"/>
                <field name="end_time" widget="timepicker" readonly="1" options="{'ampm': true, 'step': 5}"/>
                <field name="mode"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Appointment Form View -->
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">healthcare.appointment.form</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="appointment_date"/>
                            <field name="mode"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>
                        </group>
                        <group>
                            <field name="start_time" widget="timepicker" options="{'ampm': true, 'step': 5}"/> <!-- Time only, AM/PM -->
                            <field name="duration"/>
                            <field name="end_time" widget="timepicker" readonly="1" options="{'ampm': true, 'step': 5}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="reason"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Appointment Action -->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">healthcare.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[(ref('view_appointment_tree'),'tree'),(ref('view_appointment_form'),'form')]"/>
    </record>
</odoo>
