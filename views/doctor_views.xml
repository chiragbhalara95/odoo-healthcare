<odoo>
    <!-- Doctor Tree View -->
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">Doctor Tree</field>
        <field name="model">healthcare.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Doctor Form View -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">Doctor Form</field>
        <field name="model">healthcare.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Doctor Action -->
    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">healthcare.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[(ref('view_doctor_tree'),'tree'),(ref('view_doctor_form'),'form')]"/>
    </record>
</odoo>
