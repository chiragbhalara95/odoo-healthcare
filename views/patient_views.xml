<odoo>
    <!-- Patient Tree View -->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">Patient Tree</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">Patient Form</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Identity">
                        <field name="title"/>
                        <field name="first_name"/>
                        <field name="middle_name"/>
                        <field name="last_name"/>
                        <field name="suffix"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>

                    <group string="Languages">
                        <field name="spoken_language"/>
                        <field name="official_language"/>
                    </group>

                    <group string="Residential Address">
                        <field name="street"/>
                        <field name="city"/>
                        <field name="province"/>
                        <field name="postal_code"/>
                    </group>

                    <group string="Mailing Address">
                        <field name="is_same_address"/>
                        <field name="mailing_street" attrs="{'invisible':[('is_same_address','=',True)]}"/>
                        <field name="mailing_city" attrs="{'invisible':[('is_same_address','=',True)]}"/>
                        <field name="mailing_province" attrs="{'invisible':[('is_same_address','=',True)]}"/>
                        <field name="mailing_postal_code" attrs="{'invisible':[('is_same_address','=',True)]}"/>
                    </group>

                    <group string="Alternative Contact">
                        <field name="alt_first_name"/>
                        <field name="alt_last_name"/>
                        <field name="alt_contact_number"/>
                        <field name="alt_email"/>
                        <field name="alt_relationship"/>
                        <field name="alt_note"/>
                    </group>

                    <group string="Medical Info">
                        <field name="medical_history"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">healthcare.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[(ref('view_patient_tree'),'tree'),
                                   (ref('view_patient_form'),'form')]"/>
    </record>

</odoo>
